{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "module": "Node16",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "allowJs": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./dist/**/*",
    "./src/**/__tests__",
    "./src/**/__mocks__",
    "node_modules"
  ]
}